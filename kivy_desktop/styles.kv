<DButton>:
    orientation: 'horizontal'
    padding: root.internal_padding
    
    canvas:
        Color:
            rgba: root.background_color_down if root.is_pressed else root.background_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: root.background_radius
        
        Color:
            rgba: root.border_hover if root.is_hover else root.border_color
        Line:
            rounded_rectangle: [self.x, self.y, self.width, self.height] + root.background_radius
            width: root.border_line_width
    
    AnchorLayout:
        id: anchor_layout
        anchor_x: 'left' if root.content_alignment == 'left' else ('right' if root.content_alignment == 'right' else 'center')
        anchor_y: 'center'
        
        BoxLayout:
            id: content_box
            orientation: 'horizontal'
            size_hint: None, None
            size: self.minimum_size
            spacing: root.icon_text_spacing if root.icon_source else 0
            padding: [0, (max(self.height, root.icon_size) - min(self.height, root.icon_size))/2 if root.icon_source else 0, 0, 0]


<DNumeric>:
    canvas:

        Color:
            rgba: root.background_color
        Rectangle:
            pos: [self.x + root.plus_minus_width, self.y]
            size: [self.width - (root.plus_minus_width * 2), self.height]
            
        Color:
            rgba: root.border_color
        Line:
            rounded_rectangle: [self.x, self.y, self.width, self.height, dp(6), dp(6), dp(6), dp(6)]
            width: root.border_line_width


<DBoxLayout>:
    canvas:
        Color:
            rgba: root.background_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: root.background_radius
        
        Color:
            rgba: root.border_color
        Line:
            rounded_rectangle: [self.x, self.y, self.width, self.height] + root.background_radius
            width: root.border_line_width